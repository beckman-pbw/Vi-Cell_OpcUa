<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<name>Vi-Cell OPC-UA</name>
	<description>Build and deploy</description>

	<groupId>com.beckman.particle.vi-cell</groupId>
	<artifactId>opcua</artifactId>
	
	<version>0.0.1-SNAPSHOT</version>

	<packaging>pom</packaging>
	<modelVersion>4.0.0</modelVersion>

	<scm>
		<connection>scm:git:git@github.com/beckman-pbw/Vi-Cell_OpcUa.git</connection>
		<developerConnection>scm:git:git@github.com/beckman-pbw/Vi-Cell_OpcUa.git</developerConnection>
		<url>https://github.com/beckman-pbw/Vi-Cell_OpcUa.git</url>
	</scm>

	<distributionManagement>
		<snapshotRepository>
			<id>repo.beckman</id>
			<url>s3://beckman-build-artifacts/m2/snapshot</url>
		</snapshotRepository>
		<repository>
			<id>repo.beckman</id>
			<url>s3://beckman-build-artifacts/m2/release</url>
		</repository>
		<site>
			<id>repo.beckman</id>
			<url>s3://beckman-build-artifacts/docs/${project.groupId}/${project.artifactId}/${project.version}</url>
		</site>
	</distributionManagement>

	<repositories>
		<repository>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
			<id>repo.beckman</id>
			<url>https://s3-us-west-2.amazonaws.com/beckman-build-artifacts/m2/release</url>
		</repository>
		<repository>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
			<id>repo.beckman.snapshot</id>
			<url>https://s3-us-west-2.amazonaws.com/beckman-build-artifacts/m2/snapshot</url>
		</repository>
	</repositories>

	<properties>
		<project.build.sourceEncoding>iso-8859-1</project.build.sourceEncoding>
		<visualstudio.devenv>C:\Program Files (x86)\Microsoft Visual Studio\2019\Professional\MSBuild\Current\Bin\MSBuild.exe</visualstudio.devenv>
		<mstest>"C:\Program Files (x86)\Microsoft Visual Studio\2019\Professional\MSBuild\Current\Bin\MSBuild.exe"</mstest>
		<timestamp>${maven.build.timestamp}</timestamp>
		<maven.build.timestamp.format>ssSS</maven.build.timestamp.format>
	</properties>

	<dependencies>
		<!-- ****************************************************************-->
		<!-- *****                     Using NUGET                      *****-->
		<!-- ****************************************************************-->

		<!-- ****************************************************************-->
		<!-- *****            com.beckman              **********************-->
		<!-- ****************************************************************-->
		<dependency>
			<groupId>com.beckman.particle.vi-cell</groupId>
			<artifactId>grpc</artifactId>
			<version>${project.version}</version>
			<type>zip</type>
			<classifier>installer</classifier>
		</dependency>
		<dependency>
			<groupId>org.nunit</groupId>
			<artifactId>nunit</artifactId>
			<type>zip</type>
			<version>3.11.0.1</version>
		</dependency>
	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changelog-plugin</artifactId>
				<version>2.3</version>
			</plugin>
		</plugins>
	</reporting>

	<build>
		<extensions>
			<extension>
				<groupId>org.kuali.maven.wagons</groupId>
				<artifactId>maven-s3-wagon</artifactId>
				<version>1.2.1</version>
			</extension>
		</extensions>

		<plugins>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>3.0.0</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>ViCellOpcUaServer/bin</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ViCellOpcUaServer/obj</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ViCellOpcUaClient/bin</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ViCellBLU_dotNET/bin</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ViCellBLU_dotNET_Test/bin</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ExampleCPlusPlus/Debug</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ExampleNet48/bin</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ExampleNet48/obj</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ExampleNetCore/bin</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ExampleNetCore/obj</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ExampleTypeScript/obj</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ExampleTypeScript/bin</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ViCellBluOpcUaModelDesign/Model</directory>
							<includes>
								<include>**/ViCellBlu.*</include>
								<include>**/ModelDesign.csv</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ViCellBluOpcUaModelDesign/bin</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ViCellBluOpcUaModelDesign/obj</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>target</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>packages</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>OpcUaIntegrationTest/bin</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>OpcUaIntegrationTest/obj</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ViCellBluOpcUaModelDesignTests/bin</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>ViCellBluOpcUaModelDesignTests/obj</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>

					</filesets>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.0.1</version>
				<executions>
					<execution>
						<id>OpcUa</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/Release</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/ViCellOpcUaServer/bin/Release</directory>
									<filtering>true</filtering>
									<excludes>
										<exclude>*.pdb</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>
					
					<execution>
						<id>OpcUaClient</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/Release/ViCellOpcUaClient</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/ViCellOpcUaClient/bin/Release</directory>
									<filtering>true</filtering>
									<excludes>
										<exclude>*.pdb</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>

					<execution>
						<id>ViCellBLU_dotNET</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/Release/ViCellBLU_dotNET</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/ViCellBLU_dotNET/bin/Release</directory>
									<filtering>true</filtering>
									<excludes>
										<exclude>*.pdb</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>

					<execution>
						<id>OpcUaClientSourceCode</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/Release/ViCellOpcUaClient/src</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/ViCellOpcUaClient</directory>
									<filtering>true</filtering>
									<excludes>
										<exclude>bin/**</exclude>
										<exclude>obj/**</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>

					<execution>
						<id>ViCellBLU_dotNET_Test</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/ViCellBLU_dotNET_Test</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/ViCellBLU_dotNET_Test/Properties</directory>
									<filtering>true</filtering>
									<includes>
										<include>AssemblyInfo.cs</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>ViCellBLU_dotNET_Test_2</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/Release/ViCellBLU_dotNET_Test</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/ViCellBLU_dotNET_Test/bin/Release</directory>
									<filtering>true</filtering>
									<excludes>
										<exclude>*.pdb</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>

				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.12</version>
				<executions>
					<execution>
						<phase>initialize</phase>
						<id>parse-version</id>
						<goals>
							<goal>parse-version</goal>
						</goals>
					</execution>
					<execution>
						<phase>initialize</phase>
						<id>timestamp-property</id>
						<goals>
							<goal>timestamp-property</goal>
						</goals>
						<configuration>
							<name>current.year</name>
							<pattern>yyyy</pattern>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>versions-maven-plugin</artifactId>
				<version>2.1</version>
			</plugin>

			<plugin>
				<artifactId>maven-scm-plugin</artifactId>
				<version>1.9.5</version>
				<configuration>
					<tag>${project.artifactId}-${project.version}</tag>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.5.3</version>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.10</version>
				<executions>
					<execution>
						<id>unroll-dependencies</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<overWrite>true</overWrite>
							<outputDirectory>target/dependencies</outputDirectory>
							<excludeTransitive>true</excludeTransitive>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.5.0</version>
				<executions>

					<execution>
						<id>compile-generate-code</id>
						<phase>compile</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<workingdirectory>${project.basedir}</workingdirectory>
							<executable>${project.basedir}/CodeGen/BuildDesign.bat</executable>
							<successcodes>
								<successcode>0</successcode>
							</successcodes>
						</configuration>
					</execution>

					<execution>
						<id>compile-OpcUa</id>
						<phase>compile</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<workingDirectory>${project.basedir}</workingDirectory>
							<executable>${visualstudio.devenv}</executable>
							<arguments>
								<argument>OpcUa.sln</argument>
								<argument>/p:OutDir=${project.build.directory}\Release\</argument>
								<argument>/t:rebuild</argument>
								<argument>/p:Configuration=Release</argument>
								<argument>/restore</argument>
							</arguments>
							<successCodes>
								<successCode>0</successCode>
							</successCodes>
						</configuration>
					</execution>

					<execution>
						<id>compile-OpcUaClient</id>
						<phase>compile</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<workingDirectory>${project.basedir}</workingDirectory>
							<executable>${visualstudio.devenv}</executable>
							<arguments>
								<argument>ViCellOpcUaClient\ViCellOpcUaClient.csproj</argument>
								<argument>/p:OutDir=${project.build.directory}\Release\ViCellOpcUaClient\</argument>
								<argument>/t:rebuild</argument>
								<argument>/p:Configuration=Release</argument>
								<argument>/restore</argument>
							</arguments>
							<successCodes>
								<successCode>0</successCode>
							</successCodes>
						</configuration>
					</execution>

					<execution>
						<id>compile-ViCellBluDotNet</id>
						<phase>compile</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<workingDirectory>${project.basedir}</workingDirectory>
							<executable>${visualstudio.devenv}</executable>
							<arguments>
								<argument>ViCellBLU_dotNET\ViCellBLU_dotNET.csproj</argument>
								<argument>/p:OutDir=${project.build.directory}\Release\ViCellBLU_dotNET\</argument>
								<argument>/p:SolutionDir=${basedir}\</argument>
								<argument>/t:rebuild</argument>
								<argument>/p:Configuration=Release</argument>
								<argument>/restore</argument>
							</arguments>
							<successCodes>
								<successCode>0</successCode>
							</successCodes>
						</configuration>
					</execution>

					<execution>
						<id>opcua-integration-test</id>
						<phase>test</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<workingDirectory>${basedir}/target/Release/</workingDirectory>
							<executable>dotnet</executable>
							<arguments>
								<argument>test</argument>
								<argument>OpcUaIntegrationTest.dll</argument>
								<argument>--logger</argument>
								<argument>trx</argument>
							</arguments>
							<successCodes>
								<successCode>0</successCode>
							</successCodes>
						</configuration>
					</execution>

					<execution>
						<id>unit-tests</id>
						<phase>test</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<workingDirectory>${basedir}/target/Release/</workingDirectory>
							<executable>dotnet</executable>
							<arguments>
								<argument>test</argument>
								<argument>ViCellBluOpcUaModelDesignTests.dll</argument>
								<argument>--logger</argument>
								<argument>trx</argument>
							</arguments>
							<successCodes>
								<successCode>0</successCode>
							</successCodes>
						</configuration>
					</execution>

					<execution>
						<id>compile-ViCellBLU_dotNET_Test</id>
						<phase>compile</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<workingDirectory>${project.basedir}</workingDirectory>
							<executable>${visualstudio.devenv}</executable>
							<arguments>
								<argument>ViCellBLU_dotNET_Test\ViCellBLU_dotNET_Test.csproj</argument>
								<argument>/p:OutDir=${project.build.directory}\Release\ViCellBLU_dotNET_Test\</argument>
								<argument>/p:SolutionDir=${basedir}\</argument>
								<argument>/t:rebuild</argument>
								<argument>/p:Configuration=Release</argument>
								<argument>/restore</argument>
							</arguments>
							<successCodes>
								<successCode>0</successCode>
							</successCodes>
						</configuration>
					</execution>

				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>3.3</version>
				<dependencies>
					<dependency>
						<groupId>org.apache.maven.doxia</groupId>
						<artifactId>doxia-module-markdown</artifactId>
						<version>1.3</version>
					</dependency>
				</dependencies>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-project-info-reports-plugin</artifactId>
				<version>2.9</version>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>deploy-assembly</id>
						<phase>package</phase>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<outputDirectory>target/</outputDirectory>
							<descriptors>
								<value>src/main/assembly/installer-assembly.xml</value>
							</descriptors>
						</configuration>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
					<execution>
						<id>test-assembly</id>
						<phase>package</phase>
						<configuration>
							<outputDirectory>target/</outputDirectory>
							<descriptors>
								<value>src/main/assembly/testapp-assembly.xml</value>
							</descriptors>
						</configuration>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
